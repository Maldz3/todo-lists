<!DOCTYPE html>
<html>
<head>
  <title>Todolists</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if logged_in? %>
  <div style='float: right;'>
  Logged in as <%= current_user.username %> |
  <%= link_to "Logout", logout_path, method: :delete %>
  </div>
  <% end %>

<%= yield %>

</body>
</html>
